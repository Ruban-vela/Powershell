| makeresults 
| eval server_list="server1,server2,server3,server4"
| makemv delim="," server_list
| mvexpand server_list
| rename server_list as host
| join type=left host [
    search index=your_index earliest=-7d@d latest=now
    | stats latest(_time) as last_log_time by host
]
| eval last_log_time=if(isnull(last_log_time),"NO LOGS IN 7 DAYS",strftime(last_log_time,"%Y-%m-%d %H:%M:%S"))
| table host last_log_time
| sort host
