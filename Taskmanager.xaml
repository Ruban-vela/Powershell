<Window x:Class="TaskManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Task Manager" Height="300" Width="400">
    <Grid>
        <Label Content="Servers (comma-separated):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="ServersInput" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="350" Margin="10,30,0,0"/>
        
        <Label Content="Select Task:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <ComboBox x:Name="TaskSelection" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,100,0,0">
            <ComboBoxItem Content="Check Uptime"/>
            <ComboBoxItem Content="Ping Servers"/>
            <ComboBoxItem Content="Service Status"/>
            <ComboBoxItem Content="Disk Space"/>
        </ComboBox>

        <Button Content="Run Task" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,150,0,0" Click="RunTask"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="350" Margin="10,180,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
